@using System.Security.Claims
@{
    string? userRoleString = User.FindFirst(ClaimTypes.Role)?.Value;

    bool isAdmin = userRoleString == "Administrator";
    bool isStudent = userRoleString == "Student";
    bool isCommitteeMember = userRoleString == "GraduationProjectEvaluationCommitteeMember";
    bool isInstructor = userRoleString == "Instructor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRN222_Group4_FinalProject_FPTUResearchPaperManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN222_Group4_FinalProject_FPTUResearchPaperManagement.styles.css" asp-append-version="true" />
</head>
<body>
    @if (ViewBag.ShowSidebar == true)
    {
        <!-- Dashboard Layout: Sidebar + Content Wrapper -->
        <div class="dashboard-wrapper">

            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <div class="sidebar-icon">
                        <img src="https://cdn-icons-png.freepik.com/512/17985/17985864.png" alt="Avatar">
                    </div>
                    <h3 class="sidebar-title">@User.Identity?.Name</h3>
                    <p class="sidebar-email">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                </div>

                <ul class="sidebar-menu">
                    @* Admin menu *@
                    @if (isAdmin)
                    {
                        <li><a href="/Administrator/Dashboard" class="@(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")">>📊Dashboard</a></li>
                        <li><a href="/Administrator/Semester" class="@(ViewBag.ActiveMenu == "Semester" ? "active" : "")">📅 Quản lí kỳ</a></li>
                        <li><a href="/Administrator/ThesisTopic" class="@(ViewBag.ActiveMenu == "ThesisTopic" ? "active" : "")">📝 Quản lí đề tài</a></li>
                        <li><a href="/Administrator/User" class="@(ViewBag.ActiveMenu == "User" ? "active" : "")">👤 Quản lí người dùng</a></li>
                    }

                    @* Instructor menu *@
                    else if (isCommitteeMember)
                    {
                        <li><a href="/GPEC/Submission/Index" class="@(ViewBag.ActiveMenu == "TopicSubmissions" ? "active" : "")">📝 Quản lí đề tài đã nộp</a></li>
                    }
                    else if (isStudent)
                    {
                        <li><a href="/Student/Topic" class="@(ViewBag.ActiveMenu == "Topic" ? "active" : "")">📝 Đề tài luận án</a></li>
                        <li><a href="/Student/MyTopic" class="@(ViewBag.ActiveMenu == "MyTopic" ? "active" : "")">⭐ Đề tài đã đăng ký</a></li>
                    }
                    else if (isInstructor)
                    {
                        <li><a href="/Instructor/Topic/Index" class="@(ViewBag.ActiveMenu == "TopicManagement" ? "active" : "")">📝 Đề tài tốt nghiệp</a></li>
                        <li><a href="/Instructor/Submission" class="@(ViewBag.ActiveMenu == "TopicSubmissions" ? "active" : "")">📦 Quản lí tệp đề tài</a></li>
                    }
                    @* Logout button at bottom *@
                    <li><a href="/Authentication/Logout" class="sidebar-logout">Đăng xuất</a></li>
                </ul>
            </aside>

            <!-- Page Content -->
            <div class="dashboard-content">
                @if (TempData["Message"] != null && TempData["Code"] == null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }
                @if (TempData["Code"] != null)
                {
                    <div class="alert alert-danger">@TempData["Code"]: @TempData["Message"]</div>
                }
                @RenderBody()
            </div>

        </div>
    }
    else
    {
        <!-- Normal Layout for regular pages -->
        <div class="container">
            <main role="main" class="pb-3">
                @if (TempData["Message"] != null && TempData["Code"] == null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }
                @if (TempData["Code"] != null)
                {
                    <div class="alert alert-danger">@TempData["Code"]: @TempData["Message"]</div>
                }
                @RenderBody()
            </main>
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/@@microsoft/signalr@latest/dist/browser/signalr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
