@page "{editId?}"
@model PRN222_Group4_FinalProject_FPTUResearchPaperManagement.Pages.Administrator.UserModel
@{
    ViewBag.ShowSidebar = true;
    ViewBag.ActiveMenu = "User";
    var totalUsers = Model.Users.Count;
    var activeUsers = Model.Users.Count(u => u.IsActive);
    var suspendedUsers = Model.Users.Count(u => u.IsSuspended);
    var inactiveUsers = totalUsers - activeUsers;
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

    :root {
        --user-ink: #0f172a;
        --user-highlight: #f97316;
        --user-secondary: #0ea5e9;
        --user-success: #10b981;
        --user-muted: #94a3b8;
        --user-panel: #ffffff;
        --user-glow: rgba(14, 165, 233, 0.18);
    }

    .user-console {
        font-family: 'Space Grotesk', 'Segoe UI', sans-serif;
        color: var(--user-ink);
        background: linear-gradient(135deg, #fff7ed, #e0f2f1);
        border-radius: 24px;
        box-shadow: 0 35px 100px rgba(15, 23, 42, 0.18);
        animation: fadeIn 0.6s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(16px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .user-hero {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        align-items: center;
        justify-content: space-between;
        padding: 24px;
        border-radius: 20px;
        background: radial-gradient(circle at top left, rgba(250, 204, 21, 0.45), transparent 55%),
                    radial-gradient(circle at bottom right, rgba(14, 165, 233, 0.35), transparent 60%),
                    #fff;
    }

    .user-hero h1 {
        font-weight: 700;
        margin-bottom: 8px;
    }

    .user-hero p {
        color: var(--user-muted);
        margin: 0;
    }

    .user-hero .hero-actions a {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 600;
        background: var(--user-ink);
        color: #fff;
        box-shadow: 0 10px 25px rgba(15, 23, 42, 0.25);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .user-hero .hero-actions a:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(15, 23, 42, 0.28);
    }

    .user-stats {
        margin: 32px 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 18px;
        border: 1px solid rgba(148, 163, 184, 0.2);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }

    .stat-card h3 {
        font-size: 36px;
        margin: 0;
    }

    .stat-card span {
        color: var(--user-muted);
        font-size: 14px;
    }

    .user-forms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
    }

    .form-card {
        background: var(--user-panel);
        border-radius: 22px;
        padding: 24px;
        box-shadow: 0 25px 60px rgba(15, 23, 42, 0.12);
        border: 1px solid rgba(148, 163, 184, 0.2);
        position: relative;
        overflow: hidden;
    }

    .form-card::after {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.08), rgba(14, 165, 233, 0.08));
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .form-card:hover::after {
        opacity: 1;
    }

    .form-card h2 {
        font-size: 20px;
        font-weight: 600;
    }

    .form-control, .form-select {
        border-radius: 14px;
        border: 1px solid rgba(148, 163, 184, 0.4);
        padding: 12px 14px;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--user-secondary);
        box-shadow: 0 0 0 3px var(--user-glow);
    }

    .primary-btn {
        background: var(--user-highlight);
        color: #fff;
        border: none;
        border-radius: 999px;
        padding: 12px 24px;
        font-weight: 600;
        letter-spacing: 0.4px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .primary-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 25px rgba(249, 115, 22, 0.35);
    }

    .muted-panel {
        min-height: 260px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: var(--user-muted);
        border: 2px dashed rgba(148, 163, 184, 0.5);
    }

    .user-table-card {
        margin-top: 32px;
        background: #fff;
        border-radius: 24px;
        padding: 24px;
        box-shadow: 0 35px 80px rgba(15, 23, 42, 0.08);
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        font-size: 14px;
        color: var(--user-muted);
        text-transform: uppercase;
        letter-spacing: 0.08em;
    }

    th, td {
        padding: 14px;
        vertical-align: middle;
        border-bottom: 1px solid rgba(148, 163, 184, 0.25);
    }

    tbody tr:hover {
        background: rgba(14, 165, 233, 0.05);
    }

    .status-pill {
        padding: 6px 14px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.15);
        color: var(--user-success);
    }

    .status-inactive {
        background: rgba(248, 113, 113, 0.15);
        color: #dc2626;
    }

    .status-suspended {
        background: rgba(251, 191, 36, 0.18);
        color: #ca8a04;
    }

    .table-actions {
        display: flex;
        gap: 10px;
    }

    .ghost-btn {
        border-radius: 999px;
        border: 1px solid rgba(15, 23, 42, 0.15);
        padding: 8px 14px;
        background: transparent;
        font-weight: 600;
        text-decoration: none;
        color: var(--user-ink);
        transition: all 0.2s ease;
    }

    .ghost-btn:hover {
        border-color: var(--user-secondary);
        color: var(--user-secondary);
    }

    .danger-btn {
        border-radius: 999px;
        border: 1px solid rgba(220, 38, 38, 0.35);
        padding: 8px 14px;
        background: rgba(254, 226, 226, 0.7);
        color: #b91c1c;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .danger-btn:hover {
        background: rgba(254, 202, 202, 0.9);
    }

    .legacy-alert {
        border-radius: 14px;
        background: rgba(234, 179, 8, 0.15);
        padding: 12px 16px;
        font-size: 14px;
        margin-bottom: 12px;
    }

    @@media (max-width: 768px) {
        .user-console {
            padding: 20px;
        }
        .user-hero {
            flex-direction: column;
            align-items: flex-start;
        }
        th, td {
            font-size: 14px;
        }
    }
</style>

<div class="user-console">
    <section class="user-hero">
        <div>
            <h1>Điều phối người dùng</h1>
        </div>
        <div class="hero-actions">
            <a asp-page="./User">↻ Làm mới bảng</a>
        </div>
    </section>

    <section class="user-stats">
        <div class="stat-card">
            <span>Tổng người dùng</span>
            <h3>@totalUsers</h3>
        </div>
        <div class="stat-card">
            <span>Đang hoạt động</span>
            <h3 style="color: var(--user-success);">@activeUsers</h3>
        </div>
        <div class="stat-card">
            <span>Đình chỉ</span>
            <h3 style="color: #ca8a04;">@suspendedUsers</h3>
        </div>
        <div class="stat-card">
            <span>Bị vô hiệu</span>
            <h3 style="color: #dc2626;">@inactiveUsers</h3>
        </div>
    </section>

    <section class="user-forms-grid">
        <div class="form-card">
            <h2>Thêm người dùng mới</h2>
            <form method="post" asp-page-handler="Create" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <input asp-for="CreateInput.FullName" class="form-control" placeholder="Nguyễn Văn A" />
                    <span asp-validation-for="CreateInput.FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email FPT</label>
                    <input asp-for="CreateInput.Email" class="form-control" placeholder="ten@fpt.edu.vn" />
                    <span asp-validation-for="CreateInput.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu tạm</label>
                    <input asp-for="CreateInput.Password" class="form-control" type="password" placeholder="Tối thiểu 6 ký tự" />
                    <span asp-validation-for="CreateInput.Password" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Vai trò</label>
                        <select asp-for="CreateInput.Role" class="form-select">
                            @foreach (var role in Model.RoleOptions)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="CreateInput.Role" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Chuyên ngành</label>
                        <select asp-for="CreateInput.Major" class="form-select">
                            @foreach (var major in Model.MajorOptions)
                            {
                                <option value="@major">@major</option>
                            }
                        </select>
                        <span asp-validation-for="CreateInput.Major" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="primary-btn">Tạo người dùng</button>
                </div>
            </form>
        </div>

        @if (Model.EditingUserId.HasValue)
        {
            <div class="form-card" style="border: 1px solid var(--user-secondary);">
                <h2>Cập nhật thông tin</h2>
                <p class="text-muted">Đường dẫn đang chỉnh sửa: <strong>@Model.UpdateInput.Email</strong></p>

                @if (Model.LegacyMajorLabel != null || Model.LegacyRoleLabel != null)
                {
                    <div class="legacy-alert">
                        Giá trị cũ (@(Model.LegacyMajorLabel ?? Model.LegacyRoleLabel)) không nằm trong enum. Vui lòng chọn lại để chuẩn hoá.
                    </div>
                }

                <form method="post" asp-page-handler="Update">
                    <input type="hidden" asp-for="UpdateInput.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Họ và tên</label>
                        <input asp-for="UpdateInput.FullName" class="form-control" />
                        <span asp-validation-for="UpdateInput.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input asp-for="UpdateInput.Email" class="form-control" />
                        <span asp-validation-for="UpdateInput.Email" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Vai trò</label>
                            <select asp-for="UpdateInput.Role" class="form-select">
                                @foreach (var role in Model.RoleOptions)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                            <span asp-validation-for="UpdateInput.Role" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Chuyên ngành</label>
                            <select asp-for="UpdateInput.Major" class="form-select">
                                @foreach (var major in Model.MajorOptions)
                                {
                                    <option value="@major">@major</option>
                                }
                            </select>
                            <span asp-validation-for="UpdateInput.Major" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label class="form-label">Tình trạng đình chỉ</label>
                            <select asp-for="UpdateInput.IsSuspended" class="form-select">
                                <option value="false">Hoạt động</option>
                                <option value="true">Đình chỉ</option>
                            </select>
                        </div>
                        <div class="col-md-6 suspended-date-group @(Model.UpdateInput.IsSuspended ? string.Empty : "d-none")">
                            <label class="form-label">Tới ngày</label>
                            <input asp-for="UpdateInput.SuspendedUntil" type="date" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3 mt-3">
                        <label class="form-label">Đặt lại mật khẩu (tùy chọn)</label>
                        <input asp-for="UpdateInput.Password" class="form-control" type="password" placeholder="Để trống nếu giữ nguyên" />
                        <span asp-validation-for="UpdateInput.Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <button type="submit" class="primary-btn">Lưu thay đổi</button>
                        <a asp-page="./User" class="ghost-btn">Huỷ chỉnh sửa</a>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="form-card muted-panel">
                <p>Chọn một người dùng trong bảng để mở form chỉnh sửa nhanh.</p>
            </div>
        }
    </section>

    <section class="user-table-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 m-0">Danh sách người dùng</h2>
            <span class="text-muted">@totalUsers bản ghi</span>
        </div>

        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Chuyên ngành</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@user.Major</td>
                            <td>
                                <span class="status-pill @(user.IsActive ? "status-active" : "status-inactive")">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                                @if (user.IsSuspended)
                                {
                                    <span class="status-pill status-suspended">Đình chỉ</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="table-actions">
                                    <a asp-page="./User" asp-route-editId="@user.Id" class="ghost-btn">Sửa</a>
                                    <form method="post" asp-page-handler="Deactivate" onsubmit="return confirm('Bạn có chắc muốn vô hiệu hoá tài khoản này?');">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="danger-btn" @(user.IsActive ? null : "disabled")>Vô hiệu</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            const statusSelect = document.getElementById("UpdateInput_IsSuspended");
            const dateGroup = document.querySelector(".suspended-date-group");
            const dateInput = document.getElementById("UpdateInput_SuspendedUntil");
            if (!statusSelect || !dateGroup) {
                return;
            }

            const toggleSuspensionDate = () => {
                const shouldShow = statusSelect.value === "true" || statusSelect.value === "True";
                dateGroup.classList.toggle("d-none", !shouldShow);
                if (!shouldShow && dateInput) {
                    dateInput.value = "";
                }
            };

            toggleSuspensionDate();
            statusSelect.addEventListener("change", toggleSuspensionDate);
        })();
    </script>
}
